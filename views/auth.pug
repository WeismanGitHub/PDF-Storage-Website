extends layout
block content
    form(action='/api/v1/authentication/login', method='post')
        h2 Login
        div Email:
        input(type='text', name='email')
        div Password:
        input(type='password', name='password')
        p
        button(type='submit', value='login') Login

    form(action='/api/v1/authentication/register', method='post')
        h2 Register
        div Name:
        input(type='text', name='name')
        div Email:
        input(type='text', name='email')
        div Password:
        input(type='password', name='password')
        p
        button(type="submit", value='legister') Register